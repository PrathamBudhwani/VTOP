<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VTOP" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/backgroundCol</item>
        <item name="colorOnPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/appIconTint</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="fontFamily">@font/poppinsemibold</item>

    </style>

    <style name="poppins_bold" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/poppinsemibold</item>
    </style>

    <style name="ToolbarColoredBackArrow" parent="Theme.VTOP">
        <item name="android:textColorSecondary">@color/light_blue</item>
    </style>

</resources>